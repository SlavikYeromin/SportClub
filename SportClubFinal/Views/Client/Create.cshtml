                        <div class="form-label" style="text-align:center;"><h4 style="color:white;font-weight:bold;font-family:Cambria;">По-батькові</h4></div>
                        <input class="form-control" asp-for="MiddleName" style="text-align:center;height:50px;" placeholder="Введіть ваше по-батькові" title="По-батькові було написано не вірно" required />
                        <span asp-validation-for="MiddleName" class="offset-sm-4 col-sm-4" style="color:indianred;background-color:peachpuff;"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-label" style="text-align:center;"><h4 style="color:white;font-weight:bold;font-family:Cambria;">Дата народження</h4></div>
                        <input class="form-control" asp-for="BirthDate" style="text-align:center;height:50px;" type="date" name="birthdate" max="2008-05-03" required />
                        <span asp-validation-for="BirthDate" class="offset-sm-4 col-sm-4" style="color:indianred;background-color:peachpuff;"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-label" style="text-align:center;"><h4 style="color:white;font-weight:bold;font-family:Cambria;">Вид спорту</h4></div>
                        <select asp-for="FightingSportId" class="form-control" asp-items="ViewBag.FightingSports" style="text-align:center;height:50px;" title="Оберіть вид спорту" required>
                            <option value="">-----</option>
                        </select>
                    </div>

                    <br />

                    <div class="row">
                        <div class="col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary" style="width:320px;height:60px;">Підтвердити</button>
                        </div>

                        &nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;

                        <div class="col-sm-5 d-grid">
                            <a class="btn btn-outline-primary" style="width:315px;height:60px;background-color:darkgray;color:white;" asp-controller="Client" asp-action="Index" role="button"><p style="text-align:center;position:relative;top:10px;">Скасувати</p></a>
                        </div>
                    </div>


                </form>

            </div>
        </div>
