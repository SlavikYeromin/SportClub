@model IEnumerable<User>
 

@{
    ViewData["Title"] = "Список Клієнтів";
}

<h3>@ViewData["Title"]</h3>
<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Додати нового клієнта</a>
</p>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                Дія
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(model => user.UserName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => user.Email)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success btn-sm">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">
                    <div>
                        Клієнтів немає в базі даних
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
