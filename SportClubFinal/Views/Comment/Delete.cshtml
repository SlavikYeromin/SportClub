@model Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h3> @ViewData["Title"]</h3>
<hr />
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="container">
        <div class="mb-2">
            <label asp-for="CommentDescription" class="control-label"></label>
            <input asp-for="CommentDescription" class="form-control" readonly/>
        </div>
        <div class="mb-2">
            <label class="control-label">Coach</label>
            <select asp-for="CoachId" class="form-control" asp-items="ViewBag.Coaches">
                <option>--Select Coach--</option>
            </select>
        </div>
        <div>
            <input type="submit" value="Delete" class="btn btn-success btn-sm" />
        </div>
    </div>
</form>
